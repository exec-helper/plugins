# Maintainer: Bart Verhagen <barrie.verhagen at gmail dot com>
pkgname=('@PACKAGE@')
pkgbase='@PACKAGE@'
pkgver=@VERSION@
pkgrel=@PKGREL@
epoch=@EPOCH@
pkgdesc="Plugins for exec-helper"
arch=('any')
url="https://github.com/exec-helper/plugins"
license=('BSD')
groups=()
depends=()
makedepends=('git')
checkdepends=()
optdepends=('exec-helper')
provides=('@PACKAGE@=@VERSION@')
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=@CHANGELOG@
source=("@PACKAGE@::git+$url.git#commit=@GIT_REF@")
noextract=()
validpgpkeys=()

pkgver() {
    printf "%s" $pkgver
}

package() {
    install -Dm644 $pkgname/plugins/*.lua --target-directory "$pkgdir/usr/share/exec-helper/plugins"
    install -Dm644 $pkgname/LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

md5sums=('SKIP')
